<% layout("layouts/boilerplate")%>

<div class="container justify-content-center align-items-center">
    <h1>Register</h1>
</div>

<div class="container d-flex justify-content-center align-items-center my-5">
    <div class="row flex-fill">
        <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
            <div class="card shadow">
                
                <div class="card-body">
                    <h5 class="card-title my-3">Create a new account</h5>
                    <form action="/register" method="POST" class="validated-form" novalidate>
                        <div class="mb-3">
                            <label class="form-label" for="username"> Username</label>
                                <input class="form-control" type="text" id="username" name="username" required autofocus>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="email"> Email</label>
                                <input class="form-control" type="email" id="email" name="email" required>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="password"> Password</label>
                                <input class="form-control" type="password" id="password" name="password" required>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                        </div>
                        <button class="btn btn-success col-12">Register</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

